<Window x:Class="PenShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:PenShop"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <Style TargetType="fa:ImageAwesome">
            <Setter Property="Width" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="25"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="689*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Grid.Column="0">
            <StackPanel Orientation="Vertical"
                        Margin="10 0 15 0">
                <TextBlock Text="Сортировка"
                           Margin="0 0 0 5"/>
                <ComboBox SelectedIndex="0"
                          x:Name="Sort">
                    <ComboBoxItem Tag="Any"
                                  Content="Все"/>
                    <ComboBoxItem Tag="Ascending"
                                  Content="По возрастанию"/>
                    <ComboBoxItem Tag="Descending"
                                  Content="По убыванию"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Margin="10 0 15 0">
                <TextBlock Text="Сортировка"
                           Margin="0 0 0 5"/>
                <ComboBox SelectedIndex="0"
                          x:Name="Filt">
                    <ComboBoxItem Tag="Name"
                                  Content="По наименованию"/>
                    <ComboBoxItem Tag="Price"
                                  Content="По цене"/>
                    <ComboBoxItem Tag="Type"
                                  Content="По типу"/>
                    <ComboBoxItem Tag="Color"
                                  Content="По цвету"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="0 0 15 0"
                        Orientation="Vertical">
                <TextBlock Text="Название или описание"
                           Margin="0 0 0 5"/>
                <TextBox MinHeight="23"
                         MinWidth="150"
                         x:Name="NameDisSearchTb"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal">
            <fa:ImageAwesome Icon="plus"
                             Margin="8 0"
                             Foreground="Green"
                             MouseDown="AddPenButton_MouseDown"/>
            <fa:ImageAwesome Icon="Pencil"
                             Margin="8 0"
                             Foreground="Gray"
                             MouseDown="EditPenButton_MouseDown"/>
            <fa:ImageAwesome Icon="Trash"
                             Margin="8 0"
                             Foreground="Red"
                             MouseDown="DeletePenButton_MouseDown"/>
        </StackPanel>

        <ListBox d:ItemsSource="{d:SampleData ItemCount=2}"
                 ItemsSource="{Binding Pens}"
                 Grid.Row="1"
                 Margin="0 10 0 0"
                 Grid.ColumnSpan="2"
                 ItemContainerStyle="{StaticResource ResourceKey=ListBoxProducts}"
                 x:Name="PensList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5"
                            BorderBrush="Black"
                            BorderThickness="0.5"
                            Padding="5"
                            CornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                                       FontSize="20"
                                       Margin="0 0 0 10"/>
                            <StackPanel Orientation="Horizontal">
                                <Border BorderBrush="Black"
                                        BorderThickness="0.4"
                                        CornerRadius="2"
                                        Margin="0 0 20 0">
                                    <Image Height="100" 
                                           Width="100"
                                           Margin="10">
                                        <Image.Source>
                                            <Binding Path="Image">
                                                <Binding.TargetNullValue>
                                                    <BitmapImage UriSource="../Image/NetPhotoProduct.jpg"/>
                                                </Binding.TargetNullValue>
                                            </Binding>
                                        </Image.Source>
                                    </Image>
                                </Border>
                                <StackPanel>
                                    <TextBlock Text="Описание" Margin="0 0 0 10"/>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Margin="0 0 15 0">
                                            <TextBlock Text="Тип ручки"/>
                                            <TextBlock Text="{Binding PenType.Name}"/>
                                        </StackPanel>
                                        <StackPanel Margin="0 0 15 0">
                                            <TextBlock Text="Вид ручки"/>
                                            <TextBlock Text="{Binding PenView.Name}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="Цвет ручки"/>
                                            <TextBlock Text="{Binding PenColor.Name}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0} Руб.'}"
                                           VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
